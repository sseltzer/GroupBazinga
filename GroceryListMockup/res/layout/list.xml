<!-- Grocery List -->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="1dp"
    android:layout_marginTop="1dp"
    android:layout_marginLeft="1dp"
    android:layout_marginRight="1dp"
    android:background="@drawable/row_corners"  >

<Button
        android:id="@+id/addItem_btn"
        android:layout_width="105dip"
        android:layout_height="50dip"
        android:text="@string/add_item_label"
        android:textSize="12sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:adjustViewBounds="true"
        android:background="@drawable/row_corners"
        android:scaleType="fitCenter"
        android:padding="5dp"
        android:drawableTop="@drawable/add_item"
        android:textColor="#000000"
        android:layout_marginBottom="1dp"
    	android:layout_marginTop="1dp"
    	android:layout_marginLeft="1dp"
    	/>
		<!-- android:scaleType="fitCenter" adjust picture to fit button -->
    <Button
        android:id="@+id/deleteItem_btn"
        android:layout_width="105dip"
        android:layout_height="50dip"
        android:text="@string/delete_item_label"
        android:textSize="12sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:background="@drawable/row_corners"
        android:scaleType="fitCenter"
        android:padding="5dp"
        android:textColor="#000000"
        android:drawableTop="@drawable/delete_item"
        
        android:layout_marginBottom="1dp"
    	android:layout_marginTop="1dp"
        />

    <Button
        android:id="@+id/addRecipe_btn"
        android:layout_width="105dip"
        android:layout_height="50dip"
        android:text="@string/add_recipe_label"
        android:textSize="12sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:adjustViewBounds="true"
        android:background="@drawable/row_corners"
        android:scaleType="fitCenter"
        android:padding="5dp"
        android:textColor="#000000"
        android:drawableTop="@drawable/recipes"
        
        android:layout_marginBottom="1dp"
    	android:layout_marginTop="1dp"
    	android:layout_marginRight="1dp"
         />


</RelativeLayout>
