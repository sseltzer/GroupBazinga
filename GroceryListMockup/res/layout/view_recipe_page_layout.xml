<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="1dp"
    android:layout_marginTop="1dp"
    android:layout_marginLeft="1dp"
    android:layout_marginRight="1dp"
    android:background="#339966"
    
>

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/mylist_btn"
        android:layout_alignParentTop="true"
        android:background="#000000" >
       <EditText
        android:id="@+id/searchText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/row_corners"
        android:ems="10" >
		</EditText>
       <ImageButton
        android:id="@+id/search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:layout_marginLeft="5dp"
        android:background="#000000"
        android:src="@drawable/search_r_btn" />
    </TableRow>

    <ImageView
        android:id="@+id/recipeImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tableRow1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp"
        android:src="@drawable/chicken" />

    <ImageButton
        android:id="@+id/mylist_btn"
        android:layout_width="103dip"
        android:layout_height="49dip"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:adjustViewBounds="true"
        android:background="#339966"
        android:scaleType="fitCenter"
        android:src="@drawable/mylist_btn_layout"
        android:layout_marginBottom="1dp"
    	android:layout_marginTop="1dp"
    	android:layout_marginLeft="1dp"
    	/>
		<!-- android:scaleType="fitCenter" adjust picture to fit button -->
    <ImageButton
        android:id="@+id/search_btn"
        android:layout_width="103dip"
        android:layout_height="49dip"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:background="#339966"
        android:scaleType="fitCenter"
        android:src="@drawable/search_store_btn_layout" 
        android:layout_marginBottom="1dp"
    	android:layout_marginTop="1dp"
        />

    <ImageButton
        android:id="@+id/edit_btn"
        android:layout_width="103dip"
        android:layout_height="49dip"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:adjustViewBounds="true"
        android:background="#339966"
        android:scaleType="fitCenter"
        android:src="@drawable/edit_btn_layout"
        android:layout_marginBottom="1dp"
    	android:layout_marginTop="1dp"
    	android:layout_marginRight="1dp"
         />

</RelativeLayout>
