<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/row_corners"   
>

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/mylist_btn"
        android:layout_alignParentTop="true"
        android:background="@drawable/row_corners" 
        android:layout_marginBottom="2dp"  >
       <EditText
        android:id="@+id/searchText"
        android:layout_width="200dip"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textColor="#000000"
        android:layout_gravity="center_vertical"
        android:background="@drawable/input_text_layout"
        android:ems="12" >
		</EditText>
       <Button
        android:id="@+id/search"
        android:layout_width="50dip"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:layout_marginLeft="5dp"
        android:paddingLeft="15dip"
        android:background="@drawable/row_corners"
        android:drawableLeft="@drawable/spy_glass"
        />
       <Button
        android:id="@+id/favorate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:layout_marginLeft="5dp"
        android:paddingLeft="15dip"
        android:background="@drawable/row_corners"
        android:drawableLeft="@drawable/favorate"/>
    </TableRow>

    <ImageView
        android:id="@+id/recipeImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tableRow1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp"
        android:src="@drawable/chicken" />

    <Button
        android:id="@+id/saveRecipe_btn"
        android:layout_width="110dip"
        android:layout_height="50dip"
        android:layout_weight="1"
        android:text="@string/save_recipe"
        android:textSize="12sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:adjustViewBounds="true"
        android:background="@drawable/row_corners"
        android:scaleType="fitCenter"
        android:padding="5dp"
        android:drawableTop="@drawable/save"
        android:textColor="#000000"
        android:layout_marginBottom="1dp"
    	android:layout_marginTop="1dp"
    	android:layout_marginLeft="1dp"
    	/>
		<!-- android:scaleType="fitCenter" adjust picture to fit button -->
    <Button
        android:id="@+id/addToMyList_btn"
        android:layout_width="110dip"
        android:layout_height="50dip"
         android:layout_weight="1"
        android:text="@string/add_mylist_label"
        android:textSize="12sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:background="@drawable/row_corners"
        android:scaleType="fitCenter"
        android:padding="5dp"
        android:textColor="#000000"
        android:drawableTop="@drawable/add_item"
        
        android:layout_marginBottom="1dp"
    	android:layout_marginTop="1dp"
        />

    <Button
        android:id="@+id/delRecipe_btn"
        android:layout_width="110dip"
        android:layout_height="50dip"
         android:layout_weight="1"
        android:text="@string/del_recipe_label"
        android:textSize="12sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:adjustViewBounds="true"
        android:background="@drawable/row_corners"
        android:scaleType="fitCenter"
        android:padding="5dp"
        android:textColor="#000000"
        android:drawableTop="@drawable/delete_item"
        
        android:layout_marginBottom="1dp"
    	android:layout_marginTop="1dp"
    	android:layout_marginRight="1dp"
         />

    <TwoLineListItem
        android:id="@+id/twoLineListItem1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/mylist_btn"
        android:layout_alignLeft="@+id/mylist_btn"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/recipeImage" >

        <EditText
            android:id="@+id/editText1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:ems="10"
            android:inputType="textMultiLine" >

            <requestFocus />
        </EditText>

    </TwoLineListItem>

</RelativeLayout>
