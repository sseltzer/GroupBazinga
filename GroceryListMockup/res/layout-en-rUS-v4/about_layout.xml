<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Button
        android:id="@+id/okBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="36dp"
        android:text="@string/ok_button" >
    </Button>

    <TextView
        android:id="@+id/group_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/okBtn"
        android:layout_marginTop="17dp"
        android:text="@string/group"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/course_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/group_label"
        android:layout_below="@+id/group_label"
        android:layout_marginTop="17dp"
        android:text="@string/course"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/group_label"
        android:layout_below="@+id/group_label"
        android:layout_marginTop="66dp"
        android:text="@string/term"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/college_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/year"
        android:layout_below="@+id/year"
        android:layout_marginTop="18dp"
        android:text="@string/fsu"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>