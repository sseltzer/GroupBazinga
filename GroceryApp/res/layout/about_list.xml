<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_centerHorizontal="true"
    android:padding="3dp"
    android:background="#FFFFCC" >
    
   <!-- About Pages -->
   <!-- (about_pages) -->

   <LinearLayout
       android:id="@+id/about_pages"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignParentLeft="true"
       android:layout_marginRight="5dp"
       android:padding="2dp" >

       <!-- gets image of page -->
       <!-- (page_image) -->

       <ImageView
           android:id="@+id/page_image"
           android:layout_width="80dp"
           android:layout_height="120dp"
           android:layout_weight="671.33"
           android:src="@drawable/page1" />
   </LinearLayout>
   
   <!-- Page Title (pageTitle)-->
   <TextView 
       android:id="@+id/pageTitle"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignTop="@+id/about_pages"
       android:layout_toRightOf="@+id/about_pages"
       android:text="@string/about_page"
       android:textSize="14sp"
       android:textStyle="bold"
       android:textColor="#000066"
       android:typeface="serif"
       
       />
   
   <!-- Description -->
   <!-- (page_description) -->

   <TextView
       android:id="@+id/page_description"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignLeft="@+id/pageTitle"
       android:layout_below="@+id/pageTitle"
       android:text="@string/description"
       android:textColor="#404040"
       android:textSize="12sp"
       android:typeface="serif" />

</RelativeLayout>