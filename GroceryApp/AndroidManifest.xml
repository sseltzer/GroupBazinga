<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.bazinga.recipebuddy"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />
    <!-- Google Maps related permissions -->
    <permission
        android:name="edu.bazinga.recipebuddy.permission.MAPS_RECEIVE"
        android:protectionLevel="signature" />

    <uses-permission android:name="edu.bazinga.recipebuddy.permission.MAPS_RECEIVE" />

    <!-- Network connectivity permissions -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- Access Google based webservices -->
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />

    <!-- External storage for caching. -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <!-- My Location -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_MOCK_LOCATION" />
    
    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />
    
    <application
        android:allowBackup="true"
        android:icon="@drawable/gbicon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="edu.bazinga.recipebuddy.activities.Splash"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Black.NoTitleBar"  >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
         <!-- Main Activity -->
        <activity
            android:name="edu.bazinga.recipebuddy.activities.MainActivity"
            android:label="@string/title_activity_main"
            android:uiOptions="splitActionBarWhenNarrow">
            <meta-data android:name="android.support.UI_OPTIONS"
                   	   android:value="splitActionBarWhenNarrow" />
        </activity> -->
       <!-- RecipeView -->
        <activity
            android:name="edu.bazinga.recipebuddy.activities.RecipeViewer"
            android:label="@string/title_activity_recipe_viewer" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

              <!--  <category android:name="android.intent.category.LAUNCHER" /> -->
            
            </intent-filter>
            <meta-data 
                android:name="android.support.PARENT_ACTITIVY"
                android:value="edu.bazinga.recipebuddy.activities.MainActivity"
                />
        </activity>
        <!-- About -->
        <activity 
            android:name="edu.bazinga.recipebuddy.activities.AboutClass"
            android:label="@string/about_page">
           <intent-filter>
                <action android:name="android.intent.action.MAIN" />

              <!--  <category android:name="android.intent.category.LAUNCHER" /> -->
            
            </intent-filter>   
                        <meta-data 
                android:name="android.support.PARENT_ACTITIVY"
                android:value="edu.bazinga.recipebuddy.activities.MainActivity"
                />
        </activity>
        
        <activity 
            android:name="edu.bazinga.recipebuddy.activities.MapsActivity"
            android:label="@string/maps_page">
           <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
            </intent-filter>
			<meta-data 
                android:name="android.support.PARENT_ACTITIVY"
                android:value="edu.bazinga.recipebuddy.activities.MainActivity"/>
        </activity>
        
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="@string/mapkey" />
    </application>

</manifest>
